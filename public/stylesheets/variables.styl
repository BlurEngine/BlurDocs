$default-font-size = 1rem
$default-color = #cfd2da
$background-color = #252555
$p-font-size = $default-font-size

//
// Navbar
//
$navbar-bg = rgba(0, 0, 25,0.4)
$navbar-color = $default-color
$navbar-border = rgba(123,123,123,0.8)
$navbar-border-hover = rgba(200,200,200,1)
$navbar-width = 250px

$navbar-link-color = $default-color
$navbar-link-hover-color = $default-color + 100
$navbar-link-hover-bg = rgba(darken($navbar-bg, 2.5%), 0.2)
$navbar-link-active-color = $default-color + 100
$navbar-link-active-bg = darken($navbar-bg, 6.5%)
$navbar-link-disabled-color = #ccc
$navbar-link-disabled-bg = transparent

// brand
$navbar-brand-color = $navbar-link-color
$navbar-brand-hover-color = darken($navbar-brand-color, 10%)
$navbar-brand-hover-bg = transparent

$navbar-toggle-hover-bg = #ddd
$navbar-toggle-icon-bar-bg = #888
$navbar-toggle-border-bg = #ddd

$navbar-dropdown-bg = rgba(10, 23, 53, 1)
$navbar-dropdown-hover-bg = rgba(lighten($navbar-dropdown-bg, 70%), 0.1)
//
// /Navbar
//

$link-color = $default-color + 20
$link-hover-color = $link-color + 100
$navbar-padding = 30px

//
// cards
//
$card-primary-color = #1ca8dd;
$card-success-color = #1bc98e;
$card-info-color = #629EB5;
$card-danger-color = #e64759;
$card-warning-color = #e4d836;

//
// /cards
//

//
// Utils
//
$screen-sm-min = 758px;
$screen-md-min = 992px;
$screen-lg-min = 1200px;

$spacer = 20px;
$spacer-x = $spacer;
$spacer-y = $spacer;
//
// /Utils
//

$code-font-size = 0.85rem;
