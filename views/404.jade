extends templates/layout

append variables
  - title="404"
append styles
  style.
    main {
      margin-top: 5em;
      margin-bottom: 5em;
      text-align: center;
    }
      
block _content
  main
    h1(style="display: inline;") 404
    h3(style="display: inline;padding-left: 10px") &#9835; Where are you now? &#9835;
    h4 Sorry, #[mark #{req.url}] Page not found!
