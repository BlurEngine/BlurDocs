block variables
  - var title = ""

mixin nav_link(href, name, icon)
  if path === undefined
    -path = "PATH UNDEFINED"
  - href = '/' + href
  if icon
    - icon = "fa fa-" + icon
  li(class="/" + path.split("/",2)[1]===href?'active':undefined): a(href=href)&attributes(attributes)
    if icon
      i(class=icon)
    | #{name}

if title || subtitle
  title #{title} #{subtitle} - Blur
else
  title Blur
include favicon.jade
